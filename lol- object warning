import cv2
from ultralytics import YOLO
import numpy as np
import winsound  # For audio warnings on Windows

# Load the pre-trained YOLOv8 model
model = YOLO("yolov8n.pt")  # Nano model; adjust as needed

# Open the webcam
cap = cv2.VideoCapture(0)
if not cap.isOpened():
    print("Error: Could not open webcam.")
    exit()

# Distance estimation parameters (calibrate these for your setup)
FOCAL_LENGTH = 500  # Approximate focal length in pixels (depends on your camera)
KNOWN_WIDTH = 0.3  # Known width of a reference object in meters (e.g., a person's head ~30cm)
WARNING_DISTANCE = 1.0  # Warning threshold in meters

# Function to estimate distance based on bounding box width
def estimate_distance(box_width):
    # Distance = (Known Width * Focal Length) / Perceived Width
    return (KNOWN_WIDTH * FOCAL_LENGTH) / box_width

# Main loop
while True:
    ret, frame = cap.read()
    if not ret:
        print("Error: Could not read frame.")
        break

    # Perform object detection
    results = model(frame)

    # Flag for warning
    warning_triggered = False

    # Process detection results
    for result in results:
        boxes = result.boxes
        for box in boxes:
            x1, y1, x2, y2 = map(int, box.xyxy[0])
            confidence = box.conf[0]
            class_id = int(box.cls[0])
            label = model.names[class_id]

            if confidence > 0.5:
                # Calculate bounding box width in pixels
                box_width = x2 - x1

                # Estimate distance
                distance = estimate_distance(box_width)

                # Draw bounding box and label
                color = (0, 255, 0)  # Green by default
                if distance < WARNING_DISTANCE:
                    color = (0, 0, 255)  # Red if too close
                    warning_triggered = True
                
                cv2.rectangle(frame, (x1, y1), (x2, y2), color, 2)
                cv2.putText(frame, f"{label} {distance:.2f}m", (x1, y1 - 10),
                            cv2.FONT_HERSHEY_SIMPLEX, 0.5, color, 2)

    # Display warning if an object is too close
    if warning_triggered:
        cv2.putText(frame, "WARNING: Object Too Close!", (50, 50),
                    cv2.FONT_HERSHEY_SIMPLEX, 1, (0, 0, 255), 3)
        winsound.Beep(1000, 200)  # Beep at 1000 Hz for 200 ms (Windows only)

    # Show the frame
    cv2.imshow("Object Detection with Distance Warning", frame)

    # Exit on 'q'
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

# Cleanup
cap.release()
cv2.destroyAllWindows()
